<script type="text/javascript">
function remHover(){
	$(theEl).removeClass("hovering");
}
var hto;
var theEl;
 $(document).ready(function() {
	
	 socialhide();

	 $(window).scroll(function(){
		 $(".wintest").css("top",$(".wintest").parent().position().top + 40-$(window).scrollTop());
		 }); 
	 
$("ul#menu li").hover(
  function () {
	 	try{
	  if($(this).attr('class').indexOf("mega")!=-1){
  clearTimeout(hto);
  remHover(theEl);
   $(this).addClass("hovering");
  	$(".wintest").css("top",$(this).parent().position().top + 45 - $(window).scrollTop()); 
 	
  	var leftHang = $(this).position().left;
  	var divWidth = 0;
  	divWidth = $('.wintest:visible').outerWidth();
  	$('.wintest:visible').each(function(index) {
  	   $(this).css("width",divWidth);
  	    
  	    if($(this).html().length<97){
  	    	$(this).hide();
  	    }
  	});
  	
  	if((leftHang+divWidth)>(($(document).width()/2)+495-10)){  		
  		if ( $.browser.msie ) {
  			$(".wintest").css("left",(($(document).width() / 2) + 495)-divWidth-20);
  		}else{
  			$(".wintest").css("left",(($(document).width() / 2) + 495)-divWidth-10);
  		}
  		alert($(".wintest").css());
  	}else{
  		$(".wintest").css("left",$(this).position().left);	
  	}


	  }
	 	}catch(Exception){}
  },
  function () { 
  theEl=this;
   hto=setTimeout("remHover(this)",100);  
  
  }
);

});
</script>

<script>

var socTimer;

function socialhide(){
	if($(window).width()< 1050) {
		$('#header-social-container').hide();		
	}	
	else { 
		$('#header-social-container').show();		
	}
}
	
	function socHide(){
		$(".header-social").width("30px");
	}
	
$(document).ready(function(){
	
	$(".header-social").hover(
			  function () {
				  $("#debug").html("over");
				  clearTimeout(socTimer);
				  $(".header-social").width("140px");
				  $(this).find(".header-social-info").width("0px");				 
				  $(this).find(".header-social-info").stop().animate({width:"100px"});
				   },
			  function () {	 	
					$("#debug").html("without");
			      clearTimeout(socTimer);
				  socTimer = setTimeout("socHide();", 500);  
				  $(this).find(".header-social-info").stop().animate({width:'0px'}, 400);
				 	
			  }
			);
	
	$('#header-aboutus').click(function(){
		$("#header-about-us-box").slideDown(300);
		$("#header-whatwedo-box").hide();
		$("#header-contact-us-box").hide();
	});
	
	$('#header-about-us-box').mouseleave(function(){
	$('#header-about-us-box').hide();
	});

	$('#header-whatwedo').click(function(){
		$("#header-whatwedo-box").slideDown(300);
		$("#header-about-us-box").hide();
		$("#header-contact-us-box").hide();
	});
	
	$('#header-whatwedo-box').mouseleave(function(){
	$('#header-whatwedo-box').hide();
	});
	
	
	
	
	

	$(window).resize(function() {

		 if ($(this).scrollTop() > 790) {
	if($(window).width()>1150){
		
		$('#back-to-top').show();	
	}
	else { 
		$('#back-to-top').hide();
	}	
		 }
		 
	socialhide(); 
		 
		 });
	

	

	
});

	</script>

