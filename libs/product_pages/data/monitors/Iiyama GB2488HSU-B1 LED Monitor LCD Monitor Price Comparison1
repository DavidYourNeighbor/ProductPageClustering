<script type="text/javascript"> 
$(document).ready(function() {
	$('#back-to-top').click(function(){
		$('html, body').animate({scrollTop:0}, 'slow');
		return false;
		});
});

$(window).scroll(function() {
    if ($(this).scrollTop() > 790) {
    	if($(window).width()>1150){
    		$("#back-to-top").show();	
    	}
    	else { 
    		$("#back-to-top").hide();
    	}	
    }
    else {
        $("#back-to-top").hide();
    }
});


</script>

