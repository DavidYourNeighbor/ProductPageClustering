    <script type="text/javascript"> 
        
        var isIFC = 'False' ;
        
        if(isIFC == 'True') {
        	$('#productType').val('10');
        }
        else {
        	$('#productType').val('24');
        }
        	
        setFinance(true);
        
        function setFinance(setButtonValue) {
        	$('#productPrice').html('&pound;' + 899.99);
        	
        	
            var numberOfPayments = parseInt($('#productType').val());
        	
        	switch (numberOfPayments) {
        	    case 10:
        	    	$('#APR').html('0%');
        	    	var priceInc = 899.99;
        	    	
        	    	var deposit = (( priceInc / 100 * 10).toFixed(2));
        	    	$('#deposit').html('&pound;' + deposit);
        	    	
        	    	var priceMinusDeposit = priceInc - deposit;
                    
                    //calculate the monthly cost
                    var monthly = (priceMinusDeposit / numberOfPayments);
        	    	
        	    	$('#monthlyCost').html('&pound;' + monthly.toFixed(2));
        	    	if (setButtonValue) $('#fromPrice').html('&pound;' + monthly.toFixed(2));
        	    	$('#costOfLoan').html('&pound;0');
        	    	$('#totalPayable').html('&pound;899.99');
        	    	
        	    	break;
        	    case 12:
        	    case 24:
        	    	$('#APR').html('15.9%');
        	    	
        	    	priceInc = 899.99;
        	    	deposit = (( priceInc / 100 * 10).toFixed(2));
        	    	$('#deposit').html('&pound;' + deposit);
        	    	
        	    	priceMinusDeposit = priceInc - deposit;
        	    	var rate = 0.04841;
        	    	
        	    	if (numberOfPayments == 12) { rate = 0.090186; }

        	    	monthly = (priceMinusDeposit * rate).toFixed(2);
        	    	$('#monthlyCost').html('&pound;' + monthly);
        	    	if (setButtonValue) $('#fromPrice').html('&pound;' + monthly);
        	    	
        	    	var totalPayable =   parseFloat((monthly * numberOfPayments)) + parseFloat(deposit);
        	    	
        	    	$('#costOfLoan').html('&pound;' + ((monthly * numberOfPayments) - parseFloat(priceMinusDeposit)).toFixed(2));
        	    	$('#totalPayable').html('<strong>&pound;' + totalPayable.toFixed(2) + "</strong>");
        	    	
        	    	break;
        	
        	}
        }
        
    </script>
