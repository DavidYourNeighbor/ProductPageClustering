<script language="javascript">

function checkFormbusiness(){
	if ($("#n").val().length<1){
		alert("Please enter a name");
		return false;
	}else{
		if ($("#c").val().length<1){
		alert("Please enter a Company Name");
		return false;
		}else{
			if ($("#e").val().length<1){
			alert("Please enter an Email");
			return false;
			}else{
				if ($("#emp").val().length<1){
					alert("Please enter your number of employees");
					return false;
					}else{
				if ($("#t").val().length<1){
					alert("Please enter a Contact Number");
					return false;
				}else{
					return true;
				}
					}
			}	
		}		
	}
}



function submitFormbusiness(){

var name = $("#n").val();
var company = $("#c").val();
var email = $("#e").val();
var tel = $("#t").val();
var emp = $("#emp").val();

var dataString = 'n='+ escape(name) + '&c=' + escape(company) + '&e=' + escape(email) + '&t=' + escape(tel) + '&emp=' + escape(emp); 


   if (checkFormbusiness()){
    $.ajax({  
      type: "POST",  
      url: "/includes/business/businesspopupemail.html",  
      data: dataString,  
      success: function() {  
	  $(".business-form-container").hide();
                  $(".business-form-thanks").show();
}    
    });  
 
	}
}
</script>

