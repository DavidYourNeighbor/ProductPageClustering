					$(document).ready(function() {
						$("a[sharewith]").click(function(ev){
						   var rel = $(this).attr("sharewith");
						   var url = encodeURIComponent(argos.pdp.canonical);
						   var title = encodeURIComponent($("title:first").html());
	   					   rel = rel.replace("{url}",url);
						   rel = rel.replace("{title}",title);
						   self.location.href = rel;
						   return false;
						});
					
						//Toggle DIV hidden or show
						$("#sharetoggle,.sharewith").hover(
							function() {
								$(".sharewith").show();
								return false;
							},
							function() {
								$(".sharewith").hide();
								return false;
							});
							
						});
